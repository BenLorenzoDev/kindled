// Kindled Database Schema
// Using SQLite for local development, easily migrates to PostgreSQL for production

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

// NextAuth.js required models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]

  // Kindled-specific relations
  strategy      Strategy?
  posts         Post[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Kindled-specific models

model Strategy {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Brand info
  brandName     String
  brandTagline  String?
  brandIndustry String?

  // Strategy content stored as JSON
  pillars       String   // JSON array of pillars
  hooks         String   // JSON object with hook categories
  ctas          String   // JSON object with CTA categories
  voice         String   // JSON object with voice settings
  dailyTemplates String  // JSON object with daily templates
  hashtags      String   // JSON object with hashtags

  // Full markdown version for AI context
  productBrief  String   // Full product-brief.md content

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Post {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  content   String
  mode      String?  // story, tactical, balanced
  tone      String?

  // Analytics
  isFavorite Boolean @default(false)

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
